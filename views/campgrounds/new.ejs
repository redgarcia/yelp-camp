<% include ../partials/header %>
    <div class="row campground-forms">
        <div class="col-md-5 col-xs-12">
            <h1 style="text-align: center">Create a New Campground</h1>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Atok">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="price" min="0.01" step="0.01" placeholder="69.99">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Atok, Benguet">
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input class="form-control" type="text" name="image" placeholder="https://images.unsplash.com/...">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea style="resize: none" class="form-control" name="description" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds" style="text-align: center">Go Back</a>
        </div>
    </div>
    <% include ../partials/footer %>