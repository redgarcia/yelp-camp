<% include ../partials/header %>

    <header class="jumbotron">
        <h1>
            <i class="fas fa-mountain"></i>Welcome To YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>


    </header>

    <div class="action-buttons">
        <a class="btn-primary btn-lg add-campground" href="/campgrounds/new">Add New Campground</a>

        <form action="/campgrounds" method="GET">
            <div class="search">
                <input type="text" class="search-bar" name="search" placeholder="Looking for a campground?">
                <button type="submit" class="search-button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function (campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img class="tile-img" src="<%= campground.image%>">
                    <div class="caption">
                        <h4>
                            <%= campground.name %>
                        </h4>
                    </div>
                    <p>
                        <a href="campgrounds/<%= campground._id %>" class="btn btn-primary">View Details</a>
                    </p>
                </div>
            </div>
            <% }); %>
    </div>

    <% include ../partials/pagination %>
        <script src="https://rawgit.com/farzher/fuzzysort/master/fuzzysort.js"></script>
        <% include ../partials/footer %>